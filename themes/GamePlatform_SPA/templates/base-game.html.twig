<!DOCTYPE html>
<html lang="{{ app.request.locale|slice(0, 2) }}">
    <head>
		<title>{% block title %}{{ applicationTitle }} :: {{ game.title }}{% endblock %}</title>
    	
    	<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
		<meta name="description" content="" />
        <meta name="author" content="" />
        
        {% block stylesheets %}
            <link rel="icon" type="image/png" href="{{ asset('/build/game-platform/images/favicon.ico') }}"/>
            
            <!-- Google fonts-->
            <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
            <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        
        	{{ encore_entry_link_tags( 'css/app', null, 'GamePlatform_SPA' ) }}
        {% endblock %}
        
        {% block javascripts_head %}
            {{ encore_entry_script_tags( 'js/global', null, 'GamePlatform_SPA' ) }}
    	{% endblock %}
    </head>
    <body id="page-top">
        {% include 'Layout/top-game.html.twig' %}
        
		{% block content %}{% endblock %}
		
		{% include 'Layout/footer-game.html.twig' %}
		
		{% block widgets %}{% endblock %}
		{% block javascripts %}
            {{ encore_entry_script_tags( 'js/app', null, 'GamePlatform_SPA' ) }}
		{% endblock %}
	</body>
</html>
