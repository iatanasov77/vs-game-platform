{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "baseUrl": "./",
    "paths": {
        "tslib" : ["node_modules/tslib/tslib.d.ts"]
    },
    "esModuleInterop": true,
    "types": [
        "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": false,
    "checkJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "emitDecoratorMetadata": true
  },
  "angularCompilerOptions": {
      "strictTemplates": true,
      "preserveWhitespaces": true
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "./**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "assets/library"
  ]
}
